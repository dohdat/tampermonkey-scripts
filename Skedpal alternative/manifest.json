{
  "manifest_version": 3,
  "name": "Personal SkedPal Scheduler",
  "description": "Manual SkedPal-style scheduler that places tasks into Google Calendar when you click Reschedule.",
  "version": "0.1.0",
  "action": {
    "default_title": "SkedPal-Style Scheduler"
  },
  "options_ui": {
    "page": "pages/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "permissions": [
    "identity",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "498577895415-49niik9df88vgl2ah5bokdjjf86lh35n.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
