{
  "name": "personal-skedpal-extension",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install .husky",
    "build:css": "npx tailwindcss -i styles/tailwind.input.css -o styles/tailwind.css --content pages/index.html,pages/partials/app-shell.html,pages/partials/modals.html,src/ui/**/*.js --minify",
    "lint": "eslint .",
    "test": "mocha \"test/**/*.test.js\"",
    "test:coverage": "npm run lint && c8 --check-coverage --lines 80 --statements 80 --functions 80 --branches 80 --reporter=text --reporter=lcov mocha \"test/**/*.test.js\" --reporter=min",
    "coverage": "nyc mocha \"test/**/*.test.js\""
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "fake-indexeddb": "^3.1.7",
    "husky": "^8.0.3",
    "mocha": "^10.3.0",
    "nyc": "^15.1.0",
    "tailwindcss": "^3.4.19"
  },
  "c8": {
    "exclude": [
      "node_modules/**",
      "test/**",
      "vendor/**"
    ]
  }
}
